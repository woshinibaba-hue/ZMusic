/* pages/music-play/index.wxss */
page {
  color: #fff;
}

/* 背景样式 */
.bg-img,
.mask {
  position: fixed;
  top: 0;
  z-index: -1;
  width: 100%;
  height: 100%;
}

.mask {
  background-color: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(40rpx);
}

/* 自定义导航栏 */
.tab {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.5);
  vertical-align: middle;
}

.tab :first-child {
  line-height: 1;
  border-right: 4rpx rgba(255, 255, 255, 0.5) solid;
  padding-right: 20rpx;
  vertical-align: middle;
}

.tab :last-child {
  line-height: 1;
  padding-left: 20rpx;
  vertical-align: middle;
}

.active {
  color: #fff;
}

/* 歌曲内容部分 */
.song-detail {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 30rpx 60rpx;
}

.song-detail .cover {
  flex: 5;
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.song-detail .cover .img {
  width: 100%;
  border-radius: 16rpx;
}

.info {
  margin-bottom: 40rpx;
}

.info .name {
  font-size: 45rpx;
  font-weight: 700;
}

.info .author,
.info .album {
  margin-top: 20rpx;
  color: #ccc;
}

.song-detail .lyric {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 38rpx;
  color: #26ce8a;
}

.slider {
  flex: 1;
  display: flex;
  align-items: center;
}

.progress {
  flex: 1;
}

.current-time,
.end-time {
  width: 80rpx;
}

.control {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 20rpx 0 30rpx;
}

.btn {
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
}

.btn-pause {
  width: 130rpx;
  height: 130rpx;
}

.scroll-view {
  height: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  text-align: center;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.lyric-item {
  width: 100%;
  height: 35px;
  line-height: 35px;
  color: rgba(255, 255, 255, 0.6);
}

.lyric-active {
  color: #26ce8a;
  font-size: 38rpx;
}
